<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rlathfdl463.kr.hs.emirim.calculator.MainActivity">

    <EditText
        android:id="@+id/ed_first"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f7b8b8"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/ed_second"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f7b8b8"
        android:layout_margin="5dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/but_zero"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/but_one"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_row="0"
            android:layout_column="1"/>

        <Button
            android:id="@+id/but_two"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_row="0"
            android:layout_column="2"/>

        <Button
            android:id="@+id/but_three"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_row="0"
            android:layout_column="3"/>

        <Button
            android:id="@+id/but_four"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_row="0"
            android:layout_column="4"/>

        <Button
            android:id="@+id/but_five"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button
            android:id="@+id/but_six"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_row="1"
            android:layout_column="1"/>

        <Button
            android:id="@+id/but_seven"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_row="1"
            android:layout_column="2"/>

        <Button
            android:id="@+id/but_eight"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_row="1"
            android:layout_column="3"/>

        <Button
            android:id="@+id/but_nine"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_row="1"
            android:layout_column="4"/>

    </GridLayout>

    <Button
        android:id="@+id/but_plus"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="+"/>

    <Button
        android:id="@+id/but_minus"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="-"/>

    <Button
        android:id="@+id/but_multy"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="ร"/>

    <Button
        android:id="@+id/but_div"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="รท"/>

    <TextView
        android:id="@+id/view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        />

</LinearLayout>




